# Gaia Commons API - Production Environment
# DO NOT commit this file with real values!
# Use secrets management in production

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (use secrets manager)
DB_HOST=your-production-database-host.example.com
DB_PORT=5432
DB_NAME=gaia_commons_prod
DB_USER=gaia_prod_user
DB_PASSWORD=REPLACE_WITH_SECRET

# Database Connection Pool
DB_POOL_MAX=50
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_QUERY_TIMEOUT=60000

# Request Configuration
REQUEST_TIMEOUT=60000

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Security Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
